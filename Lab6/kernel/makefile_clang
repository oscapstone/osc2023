CC 			= clang
LD 			= ld.lld
OBJ_CPY		= llvm-objcopy
LINK_SCRIPT = link.ld 
CFLAGS 		= --target=aarch64-elf -Wall -O2 -ffreestanding -nostdinc -nostdlib -mcpu=cortex-a53+nosimd


SRC_DIR		= src
INCLUDE_DIR = include
OUT_DIR		= build



# cpio archive
CPIO_DIR = rootfs
CPIO_FILES = $(wildcard $(CPIO_DIR)/*)
CPIO = initramfs.cpio
QEMU_CPIO = -initrd $(CPIO)

DTB = bcm2710-rpi-3-b-plus.dtb
QEMU_DTB = -dtb $(DTB)

SRCS 		= $(wildcard $(SRC_DIR)/*.c )
OBJS 		= $(patsubst $(SRC_DIR)/%.c, %.o, $(SRCS))


VPATH = $(SRC_DIR)
vpath %.c %.S $(SRC_DIR) 



kernel8.img: boot.o entry.o sched_s.o $(OBJS)
	$(LD) -m aarch64elf -nostdlib $(OUT_DIR)/boot.o $(OUT_DIR)/entry.o $(OUT_DIR)/sched_s.o $(addprefix $(OUT_DIR)/,$(notdir $(OBJS))) -T $(SRC_DIR)/$(LINK_SCRIPT) -o kernel8.elf
	$(OBJ_CPY) -O binary kernel8.elf $@

all: kernel8.img

boot.o: boot.S
	$(CC) $(CFLAGS) -c $< -o $(OUT_DIR)/boot.o

entry.o: entry.S
	$(CC) $(CFLAGS) -c $< -o $(OUT_DIR)/entry.o

sched_s.o: sched.S
	$(CC) $(CFLAGS) -c $< -o $(OUT_DIR)/sched_s.o

%.o: %.c
	$(CC) $(CFLAGS) -I $(INCLUDE_DIR) -c $< -o $(OUT_DIR)/$@



# Make Command
run:
	qemu-system-aarch64 -M raspi3b -display none -kernel kernel8.img -serial null -serial stdio -initrd initramfs.cpio -dtb bcm2710-rpi-3-b-plus.dtb
	
run_pty:
	qemu-system-aarch64 -M raspi3b -kernel kernel8.img -serial null -serial pty -initrd ../initramfs.cpio -dtb ../bcm2710-rpi-3-b-plus.dtb
	

clean:
	rm kernel8.elf boot.img obj/*.o *.o ../*.cpio >/dev/null 2>/dev/null || true

debug:	
	qemu-system-aarch64 -M raspi3b -kernel kernel8.img -serial null -serial stdio -initrd initramfs.cpio -dtb bcm2710-rpi-3-b-plus.dtb -s -S

cpio: 
	cd ../$(CPIO_DIR) ; find . | cpio -o -H newc > ../initramfs.cpio
